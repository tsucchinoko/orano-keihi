{
  "name": "desktop",
  "version": "0.1.0",
  "description": "サブスクリプション管理デスクトップアプリケーション",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:production": "vite build --mode production",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:dev:production": "ENVIRONMENT=production pnpm tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:production": "pnpm build:production && ENVIRONMENT=production tauri build",
    "tauri:build:dmg": "tauri build --bundles dmg",
    "tauri:build:dmg:production": "pnpm build:production && ENVIRONMENT=production tauri build --bundles dmg",
    "tauri:build:dmg:production:verbose": "pnpm build:production && ENVIRONMENT=production RUST_LOG=info tauri build --bundles dmg --verbose",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --tsconfig ./tsconfig.json --type-aware ./src",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-deep-link": "^2.4.5",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "oxfmt": "^0.21.0",
    "oxlint-tsgolint": "^0.10.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
