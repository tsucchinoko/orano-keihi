# APIサーバー設定例
# 実際の値は .env ファイルに設定してください

# 基本設定
PORT=3000
HOST=localhost
NODE_ENV=development

# CORS設定
CORS_ORIGIN=http://localhost:1420,tauri://localhost

# R2設定（Cloudflare R2の実際の値を設定）
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCOUNT_ID=YOUR_ACCOUNT_ID
R2_ACCESS_KEY_ID=YOUR_ACCESS_KEY_ID
R2_SECRET_ACCESS_KEY=YOUR_SECRET_ACCESS_KEY
R2_BUCKET_NAME=orano-keihi-dev
R2_REGION=auto

# 認証設定（本番環境では強力な値を使用）
JWT_SECRET="YOUR_JWT_SECRET_32_BYTES_OR_MORE"
SESSION_ENCRYPTION_KEY="YOUR_SESSION_ENCRYPTION_KEY_32_BYTES"
SESSION_EXPIRATION_DAYS=30

# ファイルアップロード設定
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
MAX_FILES_PER_REQUEST=10

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ログ設定
LOG_LEVEL=info

# Google OAuth 2.0設定
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://127.0.0.1/callback