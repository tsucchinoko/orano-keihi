{
  "name": "api-server",
  "version": "0.1.0",
  "description": "APIサーバー - ファイルアップロード処理を集約化",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env development",
    "deploy:production": "wrangler deploy --env production",
    "start": "node dist/src/index.js",
    "check": "tsc --noEmit",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --tsconfig ./tsconfig.json --type-aware ./src",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.705.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@hono/node-server": "^1.13.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "hono": "^4.6.11",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.1.6",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/cors": "^2.8.17",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "fast-check": "^3.23.1",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "vitest": "^2.1.8",
    "wrangler": "^4.54.0"
  }
}
